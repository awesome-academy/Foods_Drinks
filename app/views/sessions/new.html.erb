<% provide :title, t("user.session.title") %>
<h1><%= t "user.session.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <div class="form-group">
        <%= f.label :email, t("user.new.email") %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, t("user.new.password") %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <%= f.label :remember_me, t("remember_me"), class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "remember_me" %></span>
      <% end %>
      <div class="form-group">
        <%= f.submit t("user.session.submit"), class: " btn btn-block send-button tx-tfm" %>
      </div>
    <% end %>
    <p><%= t "new_user" %> <%= link_to t("user.new.title"), signup_path %></p>
  </div>
</div>