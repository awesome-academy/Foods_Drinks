<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <div class="tab-pane" id="pic-5">
                        <%= image_tag(@product.image.url, alt: "Image") if @product.image? %>
                    </div>
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title"><%= @product.name %></h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        </div>
                        <span class="review-no">41 reviews</span>
                    </div>
                    <h4 class="price">current price: <span><%= number_to_currency @product.price%></span></h4>
                    <%# <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p> %>
                    <div class="action">
                        <%= link_to t("edit"), edit_admin_product_path(@product), class: "btn btn-primary btn-lg btn-block" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>